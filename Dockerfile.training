FROM tensorflow/tensorflow:2.14.0

WORKDIR /app

COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

COPY training_MLFlow.py .

# Dataset will be provided via volume mount or argument
COPY E_Commerce_Dataset.xlsx .

ENV MLFLOW_TRACKING_URI=http://mlflow-service:5000

# Use ENTRYPOINT to allow passing arguments
ENTRYPOINT ["python", "training_MLFlow.py"]

# Default arguments (can be overridden)
CMD ["--dataset", "E_Commerce_Dataset.xlsx"]